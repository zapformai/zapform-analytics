// Zapform Analytics - Database Schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// NextAuth Models
// ============================================================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?   // For credentials login
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  projects      Project[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================================================
// Analytics Models
// ============================================================================

model Project {
  id          String   @id @default(cuid())
  name        String
  domain      String
  trackingId  String   @unique @default(cuid())
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user               User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  pageViews          PageView[]
  clickEvents        ClickEvent[]
  scrollEvents       ScrollEvent[]
  analyticsSessions  AnalyticsSession[]
  actions            Action[]
  actionInteractions ActionInteraction[]

  @@index([userId])
  @@index([trackingId])
  @@map("projects")
}

model PageView {
  id        String   @id @default(cuid())
  projectId String
  sessionId String
  url       String   @db.Text
  referrer  String?  @db.Text
  timestamp DateTime @default(now())

  project Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  session AnalyticsSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([projectId, timestamp])
  @@index([sessionId])
  @@map("page_views")
}

model ClickEvent {
  id              String   @id @default(cuid())
  projectId       String
  sessionId       String
  url             String   @db.Text
  elementSelector String   @db.Text // CSS selector or tag name
  elementText     String?  @db.Text // Button text or link text
  xCoordinate     Int
  yCoordinate     Int
  timestamp       DateTime @default(now())

  project Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  session AnalyticsSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([projectId, timestamp])
  @@index([sessionId])
  @@map("click_events")
}

model ScrollEvent {
  id          String   @id @default(cuid())
  projectId   String
  sessionId   String
  url         String   @db.Text
  scrollDepth Int      // Percentage 0-100
  maxScroll   Int      // Maximum scroll depth reached for this page
  timestamp   DateTime @default(now())

  project Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  session AnalyticsSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([projectId, timestamp])
  @@index([sessionId])
  @@map("scroll_events")
}

model AnalyticsSession {
  id          String   @id @default(cuid())
  projectId   String
  sessionToken String  @unique  // Stored in cookie/localStorage

  // Device Information
  browser        String?
  browserVersion String?
  os             String?
  osVersion      String?
  deviceType     String? // mobile, tablet, desktop
  screenWidth    Int?
  screenHeight   Int?

  // Session Metadata
  ipAddress   String?
  country     String?
  city        String?

  // Session Timing
  startTime    DateTime @default(now())
  lastActivity DateTime @default(now())
  duration     Int      @default(0) // Seconds

  project            Project             @relation(fields: [projectId], references: [id], onDelete: Cascade)
  pageViews          PageView[]
  clickEvents        ClickEvent[]
  scrollEvents       ScrollEvent[]
  actionInteractions ActionInteraction[]

  @@index([projectId, startTime])
  @@index([sessionToken])
  @@map("analytics_sessions")
}

// ============================================================================
// Engagement Actions Models
// ============================================================================

model Action {
  id        String   @id @default(cuid())
  projectId String
  name      String

  // Action Type & Trigger
  type    String // 'popup', 'banner', 'modal'
  trigger Json   // Flexible trigger config: { type, delayMs?, percentage?, sensitivity? }

  // Content
  content Json // { title, message, ctaText?, ctaUrl?, dismissable }

  // Styling (Advanced Customization)
  styling Json // { position, width, height?, backgroundColor, textColor, buttonColor, buttonTextColor, borderRadius, padding, fontSize, fontFamily?, overlay, overlayColor, animation }

  // Targeting
  urlPatterns  String[] // Array of URL patterns: ['/pricing', '/blog/*', '*/checkout']
  urlMatchType String   @default("contains") // 'exact', 'contains', 'startsWith', 'regex'

  // Status & Scheduling
  isActive Boolean @default(true)
  priority Int     @default(0) // Higher priority actions show first if multiple match

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  project      Project             @relation(fields: [projectId], references: [id], onDelete: Cascade)
  interactions ActionInteraction[]

  @@index([projectId, isActive])
  @@index([projectId, priority])
  @@map("actions")
}

model ActionInteraction {
  id        String   @id @default(cuid())
  actionId  String
  projectId String
  sessionId String

  // Interaction Type
  type String // 'impression', 'click', 'dismiss', 'conversion'

  // Context
  url       String   @db.Text
  timestamp DateTime @default(now())

  // Relations
  action  Action           @relation(fields: [actionId], references: [id], onDelete: Cascade)
  project Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  session AnalyticsSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([actionId, type, timestamp])
  @@index([projectId, timestamp])
  @@index([sessionId])
  @@map("action_interactions")
}
