// Zapform Analytics - Database Schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// NextAuth Models
// ============================================================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?   // For credentials login
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  projects      Project[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================================================
// Analytics Models
// ============================================================================

model Project {
  id          String   @id @default(cuid())
  name        String
  domain      String
  trackingId  String   @unique @default(cuid())
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user              User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  pageViews         PageView[]
  clickEvents       ClickEvent[]
  scrollEvents      ScrollEvent[]
  analyticsSessions AnalyticsSession[]

  @@index([userId])
  @@index([trackingId])
  @@map("projects")
}

model PageView {
  id        String   @id @default(cuid())
  projectId String
  sessionId String
  url       String   @db.Text
  referrer  String?  @db.Text
  timestamp DateTime @default(now())

  project Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  session AnalyticsSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([projectId, timestamp])
  @@index([sessionId])
  @@map("page_views")
}

model ClickEvent {
  id              String   @id @default(cuid())
  projectId       String
  sessionId       String
  url             String   @db.Text
  elementSelector String   @db.Text // CSS selector or tag name
  elementText     String?  @db.Text // Button text or link text
  xCoordinate     Int
  yCoordinate     Int
  timestamp       DateTime @default(now())

  project Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  session AnalyticsSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([projectId, timestamp])
  @@index([sessionId])
  @@map("click_events")
}

model ScrollEvent {
  id          String   @id @default(cuid())
  projectId   String
  sessionId   String
  url         String   @db.Text
  scrollDepth Int      // Percentage 0-100
  maxScroll   Int      // Maximum scroll depth reached for this page
  timestamp   DateTime @default(now())

  project Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  session AnalyticsSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([projectId, timestamp])
  @@index([sessionId])
  @@map("scroll_events")
}

model AnalyticsSession {
  id          String   @id @default(cuid())
  projectId   String
  sessionToken String  @unique  // Stored in cookie/localStorage

  // Device Information
  browser        String?
  browserVersion String?
  os             String?
  osVersion      String?
  deviceType     String? // mobile, tablet, desktop
  screenWidth    Int?
  screenHeight   Int?

  // Session Metadata
  ipAddress   String?
  country     String?
  city        String?

  // Session Timing
  startTime    DateTime @default(now())
  lastActivity DateTime @default(now())
  duration     Int      @default(0) // Seconds

  project      Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  pageViews    PageView[]
  clickEvents  ClickEvent[]
  scrollEvents ScrollEvent[]

  @@index([projectId, startTime])
  @@index([sessionToken])
  @@map("analytics_sessions")
}
